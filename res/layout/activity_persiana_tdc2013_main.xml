<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShutterControllTDC2013_Main_Activity" >

    <Button
        android:id="@+id/openShutterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="24dp"
        android:text="@string/abrirPersianaButton" />

    <Button
        android:id="@+id/closeBladesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/openBladesButton"
        android:layout_below="@+id/openBladesButton"
        android:layout_marginTop="38dp"
        android:text="@string/fecharLaminaButton" />

    <Button
        android:id="@+id/closeShutterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/openShutterButton"
        android:layout_below="@+id/openShutterButton"
        android:layout_marginTop="18dp"
        android:text="@string/fecharPersianaButton" />

    <Button
        android:id="@+id/openBladesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/closeShutterButton"
        android:layout_below="@+id/closeShutterButton"
        android:layout_marginTop="36dp"
        android:text="@string/abrirLaminaButton" />

</RelativeLayout>